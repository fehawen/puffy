unbind-key all
unbind-mouse all

sticky yes

fontname "JetBrains Mono:pixelsize=15:antialias=true"

gap 40 10 10 10

borderwidth 1
moveamount 30

color activeborder "#3c3835"
color inactiveborder "#212222"
color urgencyborder "#d15e85"
color menubg "#008888"
color menufg "#020307"

command firefox /usr/local/bin/firefox-esr
command chromium /usr/local/bin/ungoogled-chromium
command terminal /usr/X11R6/bin/xterm
command zap /usr/local/bin/zaproxy

bind-mouse 4-1 window-move
bind-mouse 4S-1 window-resize

bind-key 4-Return terminal

bind-key 4S-q window-close

bind-key 4-d menu-cmd
bind-key 4S-d menu-window

bind-key 4CS-l lock
bind-key 4CS-r restart
bind-key 4CS-x quit

bind-key 4-m window-maximize
bind-key 4-n window-vmaximize
bind-key 4S-n window-hmaximize
bind-key 4-f window-fullscreen

bind-key 4-b window-htile
bind-key 4-v window-vtile

bind-key 4-h window-move-left
bind-key 4-j window-move-down
bind-key 4-k window-move-up
bind-key 4-l window-move-right

bind-key 4S-h window-resize-left
bind-key 4S-j window-resize-down
bind-key 4S-k window-resize-up
bind-key 4S-l window-resize-right

bind-key 4-Left window-snap-left
bind-key 4-Down window-snap-down
bind-key 4-Up window-snap-up
bind-key 4-Right window-snap-right

bind-key 4-Tab window-cycle
bind-key 4S-Tab window-rcycle

bind-key 4C-Tab group-cycle
bind-key 4CS-Tab group-rcycle

bind-key 4-1 group-only-1
bind-key 4-2 group-only-2
bind-key 4-3 group-only-3
bind-key 4-4 group-only-4
bind-key 4-5 group-only-5
bind-key 4-6 group-only-6
bind-key 4-7 group-only-7
bind-key 4-8 group-only-8
bind-key 4-9 group-only-9

bind-key 4C-1 group-toggle-1
bind-key 4C-2 group-toggle-2
bind-key 4C-3 group-toggle-3
bind-key 4C-4 group-toggle-4
bind-key 4C-5 group-toggle-5
bind-key 4C-6 group-toggle-6
bind-key 4C-7 group-toggle-7
bind-key 4C-8 group-toggle-8
bind-key 4C-9 group-toggle-9

bind-key 4C-0 group-toggle-all

bind-key 4S-1 window-movetogroup-1
bind-key 4S-2 window-movetogroup-2
bind-key 4S-3 window-movetogroup-3
bind-key 4S-4 window-movetogroup-4
bind-key 4S-5 window-movetogroup-5
bind-key 4S-6 window-movetogroup-6
bind-key 4S-7 window-movetogroup-7
bind-key 4S-8 window-movetogroup-8
bind-key 4S-9 window-movetogroup-9
