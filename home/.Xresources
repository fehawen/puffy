! vim:ft=xdefaults:

Xft.dpi: 192
Xft.autohint: 0
Xft.hinting: true
Xft.hintstyle: hintslight
Xft.lcdfilter: lcddefault
Xft.antialias: 1
Xft.rgba: rgb

! 16, 24, 32, 48, 64
Xcursor.size: 64
Xcursor.theme: default

! pixelsize is relative to screen resolution, size is relative to DPI.
XTerm*faceName: xft:monospace:size=10
*font: xft:monospace:size=10

XTerm*termName: xterm-256color
XTerm*geometry: 86x24
XTerm*internalBorder: 60
XTerm*borderWidth: 0
XTerm*utf8: true
XTerm*scrollBar: false
XTerm*cursorBlink: true
XTerm*selectToClipboard: true
XTerm*trimSelection: true
XTerm*renderFont: true
XTerm*wideChars: true
XTerm*visualBell: false
XTerm*allowBoldFonts: false
XTerm*scrollKey: true
XTerm*fullscreen: never
XTerm*cutToBeginningOfLine: false
XTerm*cutNewline: false
XTerm*metaSendsEscape: true
XTerm*saveLines: 10000
XTerm*bellIsUrgent: true
XTerm*charClass: 33:48,36-47:48,58-59:48,61:48,63-64:48,95:48,126:48
XTerm*on2Clicks: word
XTerm*on3Clicks: line

*VT100*translations: #override \n\
    Shift Ctrl <KeyPress> c: copy-selection(SELECT) \n\
    Shift Ctrl <KeyPress> v: insert-selection(SELECT) \n\
    Shift <Btn1Down>: exec-formatted("xdg-open '%t'", SELECT)

#define FG #b2bebf
#define BG #1e282c
#define GREY #566166
#define RED #b56666
#define GREEN #779687
#define YELLOW #b98675
#define BLUE #5e828f
#define MAGENTA #b48291
#define CYAN #7ab1b3

XTerm*foreground: FG
XTerm*background: BG
XTerm*cursorColor: FG
XTerm*color0: BG
XTerm*color1: RED
XTerm*color2: GREEN
XTerm*color3: YELLOW
XTerm*color4: BLUE
XTerm*color5: MAGENTA
XTerm*color6: CYAN
XTerm*color7: FG
XTerm*color8: GREY
XTerm*color9: RED
XTerm*color10: GREEN
XTerm*color11: YELLOW
XTerm*color12: BLUE
XTerm*color13: MAGENTA
XTerm*color14: CYAN
XTerm*color15: FG
