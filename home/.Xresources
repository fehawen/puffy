! vim:ft=xdefaults:

Xft.autohint: 0
Xft.hinting: true
Xft.hintstyle: hintslight
Xft.lcdfilter: lcddefault
Xft.antialias: 1
Xft.rgba: rgb

Xcursor.theme: default

! pixelsize is relative to screen resolution, size is relative to DPI.
XTerm*faceName: xft:monospace:size=7
*font: xft:monospace:size=7

XTerm*scaleHeight: 1.4
XTerm*termName: xterm-256color
XTerm*geometry: 92x20
XTerm*internalBorder: 40
XTerm*borderWidth: 0
XTerm*utf8: true
XTerm*scrollBar: false
XTerm*cursorBlink: true
XTerm*selectToClipboard: true
XTerm*trimSelection: true
XTerm*renderFont: true
XTerm*wideChars: true
XTerm*visualBell: false
XTerm*allowBoldFonts: false
XTerm*scrollKey: true
XTerm*fullscreen: never
XTerm*cutToBeginningOfLine: false
XTerm*cutNewline: false
XTerm*metaSendsEscape: true
XTerm*saveLines: 10000
XTerm*bellIsUrgent: true
XTerm*charClass: 33:48,36-47:48,58-59:48,61:48,63-64:48,95:48,126:48
XTerm*on2Clicks: word
XTerm*on3Clicks: line

*VT100*translations: #override \n\
    Shift Ctrl <KeyPress> c: copy-selection(SELECT) \n\
    Shift Ctrl <KeyPress> v: insert-selection(SELECT) \n\
    Shift <Btn1Down>: exec-formatted("xdg-open '%t'", SELECT)

XTerm*foreground: #9cb9de
XTerm*background: #08090c
XTerm*cursorColor: #9cb9de
XTerm*color0: #0d1016
XTerm*color8: #30445c
XTerm*color1: #e24358
XTerm*color9: #e24358
XTerm*color2: #9cb9de
XTerm*color10: #9cb9de
XTerm*color3: #e24358
XTerm*color11: #9cb9de
XTerm*color4: #607ea0
XTerm*color12: #607ea0
XTerm*color5: #e24358
XTerm*color13: #e24358
XTerm*color6: #607ea0
XTerm*color14: #607ea0
XTerm*color7: #9cb9de
XTerm*color15: #9cb9de
