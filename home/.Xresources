! vim:ft=xdefaults

Xft.autohint: 0
Xft.hinting: true
Xft.hintstyle: hintslight
Xft.lcdfilter: lcddefault
Xft.antialias: 1
Xft.rgba: rgb

XTerm*termName: xterm-256color
XTerm*geometry: 100x20
XTerm*internalBorder: 40
XTerm*borderWidth: 0
XTerm*utf8: true
XTerm*locale: true
XTerm*scrollBar: false
XTerm*cursorBlink: false
XTerm*selectToClipboard: true
XTerm*trimSelection: true
XTerm*renderFont: true
XTerm*wideChars: true
XTerm*visualBell: false
XTerm*saveLines: 10000
XTerm*pointerMode: 2

XTerm.VT100.translations: #override \n\
    Shift Ctrl <KeyPress> v:insert-selection(CLIPBOARD) \n\
    Shift Ctrl <KeyPress> c:select-set(CLIPBOARD)

#ifdef QHD
Xft.dpi: 192
Xcursor.size: 48
XTerm*faceName: xft:JetBrains Mono:pixelsize=28
URxvt.font: xft:JetBrains Mono:pixelsize=28
#else
Xcursor.size: 24
XTerm*faceName: xft:JetBrains Mono:pixelsize=14
URxvt.font: xft:JetBrains Mono:pixelsize=14
#endif

URxvt.letterSpace: -1
URxvt.internalBorder: 40
URxvt.geometry: 100x20

URxvt.perl-ext-common: default,matcher,searchable-scrollback,-confirm-paste
URxvt.iso14755: false
URxvt.iso14755_52: false
URxvt.termName: rxvt-unicode-256color
URxvt.loginShell: true
URxvt.utmpInhibit: true
URxvt.buffered: true

URxvt.cursorUnderline: false
URxvt.cursorBlink: false
URxvt.pointerBlank: true
URxvt.urgentOnBell: false

URxvt.saveLines: 10000
URxvt.scrollBar: false
URxvt.secondaryScroll: true
URxvt.jumpScroll: true
URxvt.skipScroll: false
URxvt.scrollTtyOutput: false
URxvt.scrollWithBuffer: true
URxvt.scrollTtyKeypress: true

URxvt.selectToClipboard: true
URxvt.cutchars: "`\"'&()*,;<=>?@[]^{|}.:/-"
URxvt.keysym.Shift-Control-C: eval:selection_to_clipboard
URxvt.keysym.Shift-Control-V: eval:paste_clipboard
URxvt.keysym.C-M-c: builtin-string:
URxvt.keysym.C-M-v: builtin-string:

URxvt.url-launcher: /usr/local/bin/firefox-esr
URxvt.matcher.button: C-1
URxvt.matcher.rend.0: Uline

*foreground: #24292e
*background: #ffffff
*cursorColor: #24292e
*color0: #f2f2f2
*color8: #969696
*color1: #d73a49
*color9: #d73a49
*color2: #22863a
*color10: #22863a
*color3: #e36209
*color11: #e36209
*color4: #032f62
*color12: #032f62
*color5: #6f42c1
*color13: #6f42c1
*color6: #005cc5
*color14: #005cc5
*color7: #24292e
*color15: #24292e
