conky.config = {
    alignment = 'top_right',
    background = true,
    border_width = 0,
    double_buffer = true,
    default_color = '#e24358',
    color1 = '#9cb9de',
    draw_borders = false,
    draw_outline = false,
    draw_shades = false,
    use_xft = true,
    font = 'monospace:size=7',
    font1 = 'Font Awesome 7 Free:style=Solid:size=7',
    gap_x = 20,
    gap_y = 4,
    out_to_x = true,
    own_window = true,
    own_window_class = 'Conky',
    own_window_type = 'override',
    own_window_colour = '#08090c',
    update_interval = 10,
    uppercase = false,
}

conky.text = [[
${color}/////// \
${color1}${font1} ${font}${exec date "+%H:%M"} \
${color}///////// \
${color1}${font1} ${font}${memfree} \
${color}/////////// \
${color1}${font1} ${font}${fs_free /home} \
${color}///////////// \
${color1}${font1} \
${font}${exec ifconfig iwm0 | egrep ieee80211 | awk '{print $3}'} \
${color}///////////////
${alignr}/////// \
${color1}${font1}${if_match ${exec sndioctl -n output.mute} > 0}${font}\
${else} ${font}\
${exec sndioctl -n output.level | awk '{print int($0*100)}'}%${endif} \
${color}///////// \
${color1}${font1} ${font}${exec xbacklight -get | cut -d . -f 1}% \
${color}/////////// \
${color1}${font1}${if_match ${exec apm -a} == 1} ${else} ${endif}\
${font}${exec apm -l}% \
${color}///////////// \
${color1}${font1} ${font}\
${exec sysctl -n hw.sensors.cpu0.temp0 | cut -d '.' -f 1}°C \
${color}///////////////    \
]];
